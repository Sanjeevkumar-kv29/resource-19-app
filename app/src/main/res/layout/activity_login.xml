<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginscreen"
    android:background="@drawable/whiteback">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/logintxt"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="LOGIN HERE "
        android:textColor="@color/primary"
        android:textSize="25dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logintxt"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/primaryborder">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/loginmobile"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/primaryborder"
            android:gravity="center"
            android:hint="ENTER MOBILE No"
            android:inputType="number"
            android:maxLength="10"
            android:textColor="@color/primary"
            android:textColorHint="@color/primaryhint"
            android:textSize="20dp" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/loginpass"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@+id/loginid"
            android:layout_marginTop="24dp"
            android:background="@drawable/primaryborder"
            android:gravity="center"
            android:hint="ENTER PASSWORD"
            android:textColor="@color/primary"
            android:textColorHint="@color/primaryhint"
            android:textSize="20dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/loginbttn"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_below="@+id/loginpass"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="55dp"
            android:background="@drawable/botomdrawerback"
            android:text="Login"
            android:textColor="@color/white"
            android:textSize="25dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/log2reg"
            android:layout_width="191dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll"
            android:layout_alignParentEnd="true"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="Don't have account? Register Here"
            android:textColor="@color/primary"
            android:textSize="16dp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/forgetpass"
            android:layout_width="196dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:gravity="center"
            android:text="forget Password?"
            android:textColor="#FFFFFF"
            android:textSize="18dp" />

    </LinearLayout>

</RelativeLayout>