<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pick a Resource for check avilablity"
            android:layout_gravity="center"
            android:textSize="22dp"
            android:textColor="@color/primary"
            android:layout_margin="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select State -"
                android:textSize="15dp"
                android:layout_weight="1"
                android:textColor="@color/primary"
                android:textAlignment="center"/>

            <Spinner
                android:id="@+id/stateselectspinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:dropDownWidth="fill_parent"
                android:outlineSpotShadowColor="@color/primary"
                android:outlineAmbientShadowColor="@color/primary"
                android:background="@android:drawable/btn_dropdown"/>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/selectcitylyt"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select City -"
                android:textSize="15dp"
                android:layout_weight="1"
                android:textColor="@color/primary"
                android:textAlignment="center"/>

            <Spinner
                android:id="@+id/cityselectspinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:dropDownWidth="fill_parent"
                android:background="@android:drawable/btn_dropdown" />


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/oxygenavail"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_margin="25dp"
                android:orientation="vertical"
                android:elevation="10dp"
                android:background="@drawable/whiteback"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/ocylender"
                    android:textColor="@color/white"
                    />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Oxygen cylinders"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textColor="@color/primary"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/icuandventilators"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_margin="25dp"
                android:orientation="vertical"
                android:elevation="10dp"
                android:background="@drawable/whiteback"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/venti"
                    android:textColor="@color/white"
                    />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ICU  and Ventilators"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textColor="@color/primary"
                    />


            </LinearLayout>

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/plasmaavail"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_margin="25dp"
                android:orientation="vertical"
                android:elevation="10dp"
                android:background="@drawable/whiteback"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/plsma"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Plasma "
                    android:padding="5dp"
                    android:gravity="center"
                    android:textColor="@color/primary"
                    />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/hospitalbed"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_margin="25dp"
                android:orientation="vertical"
                android:elevation="10dp"
                android:background="@drawable/whiteback"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/beds"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hospital Beds"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textColor="@color/primary"
                    />


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/remdesivir"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_margin="25dp"
                android:orientation="vertical"
                android:elevation="10dp"
                android:background="@drawable/whiteback"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/remdesi"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Remdesivir and Tocilizumab"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textColor="@color/primary"
                    />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/fabiflue"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_margin="25dp"
                android:orientation="vertical"
                android:elevation="10dp"
                android:background="@drawable/whiteback"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:background="@drawable/remdes"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fabiflue and Favipiravir"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textColor="@color/primary"
                    />


            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/nearbymedicalship"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="25dp"
            android:background="@drawable/botomdrawerback"
            android:text="Contact near by medical shop"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_margin="15dp"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="25dp"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_margin="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"></LinearLayout>

    </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>